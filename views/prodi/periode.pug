block web-content
    h1 Periode Beasiswa
    button.btn.btn-primary.mb-3(data-toggle="modal", data-target="#createPeriodeModal") Tambah Periode

    table.table.table-bordered.table-hover
        thead
            tr
                th Nama Periode
                th Tanggal Mulai
                th Tanggal Selesai
                th Status
                th Aksi
        tbody
            each p in periode
                tr
                    td= p.nama_periode
                    td= p.tanggal_mulai
                    td= p.tanggal_selesai
                    td= p.status
                    td
                        button.btn.btn-warning.btn-sm(data-toggle="modal", data-target=`#updatePeriodeModal-${p.periode_id}`) Ubah
                        form(method="post", action=`/prodi/periode/delete/${p.periode_id}`, style="display:inline;")
                            button.btn.btn-danger.btn-sm(type="submit") Hapus

    // Modal Tambah Periode
    .modal.fade(id="createPeriodeModal", tabindex="-1", role="dialog", aria-labelledby="createPeriodeModalLabel", aria-hidden="true")
        .modal-dialog(role="document")
            .modal-content
                .modal-header
                    h5.modal-title(id="createPeriodeModalLabel") Tambah Periode
                    button.close(type="button", data-dismiss="modal", aria-label="Close")
                        span(aria-hidden="true") &times;
                .modal-body
                    form(method="post", action="/prodi/periode")
                        .form-group
                            label(for="nama_periode") Nama Periode
                            input.form-control(type="text", id="nama_periode", name="nama_periode", required)
                        .form-group
                            label(for="tanggal_mulai") Tanggal Mulai
                            input.form-control(type="date", id="tanggal_mulai", name="tanggal_mulai", required)
                        .form-group
                            label(for="tanggal_selesai") Tanggal Selesai
                            input.form-control(type="date", id="tanggal_selesai", name="tanggal_selesai", required)
                        .form-group
                            label(for="status") Status
                            select.form-control(id="status", name="status", required)
                                option(value=true) Aktif
                                option(value=false) Tidak Aktif
                        .modal-footer
                            button.btn.btn-secondary(type="button", data-dismiss="modal") Tutup
                            button.btn.btn-primary(type="submit") Simpan

    // Modal Ubah Periode
    each p in periode
        .modal.fade(id=`updatePeriodeModal-${p.periode_id}`, tabindex="-1", role="dialog", aria-labelledby="updatePeriodeModalLabel", aria-hidden="true")
            .modal-dialog(role="document")
                .modal-content
                    .modal-header
                        h5.modal-title(id="updatePeriodeModalLabel") Ubah Periode
                        button.close(type="button", data-dismiss="modal", aria-label="Close")
                            span(aria-hidden="true") &times;
                    .modal-body
                        form(method="post", action=`/prodi/periode/update/${p.periode_id}`)
                            .form-group
                                label(for="nama_periode") Nama Periode
                                input.form-control(type="text", id="nama_periode", name="nama_periode", value=p.nama_periode, required)
                            .form-group
                                label(for="tanggal_mulai") Tanggal Mulai
                                input.form-control(type="date", id="tanggal_mulai", name="tanggal_mulai", value=p.tanggal_mulai, required)
                            .form-group
                                label(for="tanggal_selesai") Tanggal Selesai
                                input.form-control(type="date", id="tanggal_selesai", name="tanggal_selesai", value=p.tanggal_selesai, required)
                            .form-group
                                label(for="status") Status
                                select.form-control(id="status", name="status", required)
                                    option(value=1 selected=!p.status) Aktif
                                    option(value=0 selected=!p.status) Tidak Aktif
                            .modal-footer
                                button.btn.btn-secondary(type="button", data-dismiss="modal") Tutup
                                button.btn.btn-primary(type="submit") Simpan



